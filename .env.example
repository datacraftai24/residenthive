# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
PGPASSWORD=your_postgres_password

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY_HERE

# Repliers API Configuration
REPLIERS_API_KEY=YOUR_REPLIERS_KEY_HERE

# Tavily API (for search)
TAVILY_API_KEY=tvly-YOUR_TAVILY_KEY_HERE

# Session & Security
SESSION_SECRET=your-session-secret-key
JWT_SECRET=your-jwt-secret-key

# Application Configuration
APP_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# Email Service Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# Feature Flags
USE_ENHANCED_STRATEGY=true
USE_ENHANCED_EXTRACTION=true

# Clerk Authentication (Frontend) - Get from Clerk Dashboard
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_CLERK_PUBLISHABLE_KEY

# Clerk Authentication (Backend) - Get from Clerk Dashboard
CLERK_SECRET_KEY=sk_test_YOUR_CLERK_SECRET_KEY
CLERK_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_IF_USING_WEBHOOKS
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_CLERK_PUBLISHABLE_KEY #for server-side rendering choose express